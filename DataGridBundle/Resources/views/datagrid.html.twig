{% block grid %}
<div class="grid">
    <form action="{{ grid.url }}" method="post">
        {% if grid.isMassActionVisible %}
        {{ grid_massactions() }}
        {% endif %}
        <table style="width:100%">
        {% if grid.columns.showtitles %}
            {{ grid_titles(grid.columns) }}
        {% endif %}

        {% if grid.columns.showfilters %}
            {{ grid_filters(grid.columns) }}
        {% endif %}

        {{ grid_rows(grid.rows, grid.columns) }}
        </tr>
        </table>
        {{ grid_pager() }}
    </form>
</div>
{% endblock %}

{% block grid_titles %}
    <tr>
    {% for column in columns %}
        <th class="title"{% if(column.size > 0) %} style="width:{{column.size}}px"{% endif %}>
        <a href="{{ column.orderurl }}" title="Order by {{ column.title }}">{{ column.title }}</a>
        {% if column.order == 'asc' %}
            <div class="sort_up"></div>
        {% elseif column.order == 'desc' %}
            <div class="sort_down"></div>
        {% endif %}
        </th>
    {% endfor %}
    </tr>
{% endblock %}

{% block grid_filters %}
    <tr>
    {% for column in columns %}
        <th>{{ column.filter|raw }}</th>
    {% endfor %}
    </tr>
{% endblock %}

{% block grid_rows %}
    {% for row in rows %}
    <tr{% if row.color != '' %} style="background-color:{{row.color}};"{% endif %}>
    {% for col in columns %}
        {% if loop.last %}
        <td class="last"> {{row.field(col.id)|raw}}</td>
        {% else %}
        <td> {{row.field(col.id)|raw}}</td>
        {% endif %}
    {% endfor %}
    </tr>
    {% endfor %}
{% endblock %}

{% block grid_pager %}
<div class="pager">
Page: <input type="button" class="prev" value="<"/><input type="text" value="2" size="2"/><input type="button" value=">" class="next"/> of 50,
Display <select><option value="1">20</option></select> Items per page
</div>
{% endblock %}

{% block grid_massactions %}
<div class="mass-actions" style="overflow: hidden">
<a href="#">Select Vidible</a> |
<a href="#">Deselect Vidible</a> | 
<a href="#">Select All</a> |
<a href="#">Deselect All</a>
<div style="float:right">
Action: <select>
    <option value="1">Remove</option>
</select><input type="button" value="Submit Action"/>
</div>
</div>
{% endblock %}


